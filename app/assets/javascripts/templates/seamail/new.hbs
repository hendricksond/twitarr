<div class="main-page-header">
  <div class="title">{{#link-to 'seamail.index'}}Seamails{{/link-to}} > New</div>
</div>
<div class="display_card">
  <div class="card-section">
    <div class="form">
      <span class="label">Users</span>
      <div class="seamail-autocomplete-parent">
        {{ input value=toInput id='seamail-user-autocomplete' class='input' autocomplete='off' placeholder='start typing a name' key-up='handleKeyUp'}}
        {{#if searchResults}}
          <ul class="seamail-user-autocomplete-list">
            {{#each result in searchResults}}
              <li class="seamail-user-autocomplete-item" {{ action 'select' result }}>
                <a class="seamail-user-autocomplete-anchor" href="#" {{ action 'select' result }} onkeyup={{action 'listKeyUp'}} >{{display-name-plus-username result.username result.display_name}}</a>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
      <div class="seamail-to-users">
        {{#each user in toUsers}}
          <span class="to-user" {{ action 'remove' user }}>
            {{user-picture user.username user.last_photo_updated}}
            {{user.display_name}}
            <span class="glyphicon glyphicon-remove"></span>
          </span>
        {{/each}}
      </div>
      {{input value=subject class='input' placeholder='Subject' maxlength='200' key-down='handleKeyDown'}}
      {{textarea value=text rows='6' class='input' placeholder='First message' maxlength='10000' key-down='handleKeyDown'}}
      <ul class="errors-list">
        {{#each error in errors}}
          <li>{{error}}</li>
        {{/each}}
      </ul>
      <span class="controls">
        <div>
            Please remember to abide by the {{#link-to 'conduct' target='_blank'}}Code of Conduct{{/link-to}}
            <br/><br/><br/>
        </div>
        <div><button class="btn" {{action 'new'}}>Send</button></div>
      </span>
    </div>
  </div>
</div>
