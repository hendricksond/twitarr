<div class="main-page-header">
  <div class="title">{{#link-to 'forums'}}Forums{{/link-to}} > New</div>
</div>
<div class="display_card">
  <div class="card-section">
    <div class="form">
      {{input value=subject class='input' placeholder='Subject' maxlength='200' key-down='handleKeyDown'}}
      {{textarea value=text rows='6' class='input' placeholder='First post' maxlength='10000' key-down='handleKeyDown'}}
      {{partial 'upload'}}

      <ul class="errors-list">
        {{#each error in errors}}
          <li>{{error}}</li>
        {{/each}}
      </ul>
      <span class="controls">
        <div>
            Please remember to abide by the {{#link-to 'conduct' target='_blank'}}Code of Conduct{{/link-to}}
            <br/><br/><br/>
        </div>
        <div>
          {{#if role_admin}}
            {{input checked=as_admin type='checkbox' id='as_admin'}} <label for='as_admin'>Post as TwitarrTeam</label>
          {{/if}}
          {{#if role_moderator}}
            {{input checked=as_mod type='checkbox' id='as_mod'}} <label for='as_mod'>Post as Moderator</label>
          {{/if}}
          <button class="btn" {{action 'new'}}>Create</button>
        </div>
      </span>
    </div>
  </div>
</div>
